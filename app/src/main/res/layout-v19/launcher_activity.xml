<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <!-- status bar background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/primary" />

    <View
        android:background="@android:color/white"
        android:layout_above="@+id/color_top"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <View
        android:id="@+id/color_top"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@+id/title_strip"
        android:background="@color/accent" />

    <LinearLayout
        android:id="@+id/title_strip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/accent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bus_image"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/large_bus" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_largest" />
    </LinearLayout>

    <View
        android:id="@+id/color_bottom"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/title_strip"
        android:background="@color/accent" />

    <View
        android:background="@android:color/white"
        android:layout_below="@+id/color_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingEnd="48dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:paddingStart="48dp"
        android:text="@string/cumtd_credit"
        android:textColor="@color/white_text_inactive"
        android:textSize="@dimen/text_small" />
</RelativeLayout>