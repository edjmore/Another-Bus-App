<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:extra="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44000000"
    android:clipChildren="false">

    <com.droid.mooresoft.materiallibrary.widgets.Card
        android:id="@+id/card"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        extra:m_color="@android:color/white"
        extra:m_elevation="12dp"
        extra:m_force_z_reorder="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:clipChildren="false"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginStart="48dp"
                android:clipChildren="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/min_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="5"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_largest" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mins"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_regular" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.droid.mooresoft.materiallibrary.widgets.FloatingActionButton
                    android:id="@+id/done_button"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    extra:m_color="@color/accent"
                    extra:m_elevation="8dp"
                    extra:m_icon="@mipmap/ic_check" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" />


        </LinearLayout>
    </com.droid.mooresoft.materiallibrary.widgets.Card>
</RelativeLayout>