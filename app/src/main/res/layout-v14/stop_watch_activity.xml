<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- action bar -->
        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/primary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_gravity="center"
                android:padding="@dimen/icon_padding" />

            <TextView
                android:id="@+id/action_bar_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_large" />

            <ImageView
                android:id="@+id/action_favorite"
                android:layout_width="@dimen/icon_size"
                android:layout_gravity="center"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/icon_padding" />
        </LinearLayout>

        <com.droid.mooresoft.anotherbusapp.views.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/primary" />

        <!-- todo: tab layout shadow -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/tab_layout_shadow" />

        <RelativeLayout
            android:id="@+id/error_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- normal content view -->
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- error layout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <!-- error text -->
                <TextView
                    android:id="@+id/error_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="18dp"
                    android:text="@string/default_error"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_large"
                    android:visibility="gone" />

                <!-- refresh button -->
                <Button
                    android:id="@+id/refresh_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/subtle_button_background"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/refresh_button"
                    android:textColor="@color/subtle_button_color_selector"
                    android:textSize="@dimen/text_large"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone" />
</RelativeLayout>